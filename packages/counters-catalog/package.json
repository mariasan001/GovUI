{
  "name": "@govui/counters-catalog",
  "version": "0.1.0",
  "private": true,
  "type": "module",

  "files": ["src", "dist"],
  "sideEffects": ["**/*.css"],

  "exports": {
    ".":       { "import": "./src/index.ts", "types": "./src/index.ts" },  
    "./next":  { "import": "./src/next.ts",  "types": "./src/next.ts"  },  
    "./next.css": "./src/next.css"
  },

  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "next": ">=13",
    "lucide-react": ">=0.300.0"
  },
  "devDependencies": {
    "typescript": "^5.6.0",
    "tsup": "^8.5.0",
    "lucide-react": "^0.446.0"
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm --sourcemap --treeshake --clean",
    "dev": "tsup src/index.ts --dts --format esm --sourcemap --treeshake --watch --clean",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  }
}
